<Page x:Class="ApexStats.View.PlayerStatsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ApexStats.View"
      xmlns:vm="clr-namespace:ApexStats.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayerStatsPage">
    <Page.DataContext>
        <vm:PlayerStatsVM/>
    </Page.DataContext>
    <Grid>
        
        <!-- COLS -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.75*"/>
            <ColumnDefinition Width="4.0*"/>
        </Grid.ColumnDefinitions>

        <!-- ROWS -->
        <Grid.RowDefinitions>
            <RowDefinition Height="1.*"/>
            <RowDefinition Height="0.03*"/>
            <RowDefinition Height="2.0*"/>
            <RowDefinition Height="0.03*"/>
            <RowDefinition Height="2.0*"/>
            <RowDefinition Height="0.03*"/>
            <RowDefinition Height="2.0*"/>
            <RowDefinition Height="0.03*"/>
        </Grid.RowDefinitions>

        <!-- RESOURCES -->
        <Grid.Resources>
            <SolidColorBrush x:Key="BackgroundPrimary" Color="#313443"/>
            <SolidColorBrush x:Key="BackgroundSecondary" Color="#363848"/>
            <SolidColorBrush x:Key="DarkPrimary" Color="#21212a"/>
            <SolidColorBrush x:Key="TextSeperator" Color="#b33834"/>
            <SolidColorBrush x:Key="TextPrimary" Color="White"/>
            <SolidColorBrush x:Key="TextSecondary" Color="#8f94a5"/>

            <Style x:Key="PrimaryTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontFamily" Value="Segoe UI Variable Text"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <Style x:Key="SecondaryTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="Segoe UI Variable Text SemiLight"/>
            </Style>
        </Grid.Resources>
        
        <!-- BACKGROUNDS -->
        <Border Grid.ColumnSpan="2" Grid.Row="0" 
            Background="{StaticResource BackgroundPrimary}"/>

        <Border Grid.Column="0" Grid.Row="0"
            Background="{StaticResource DarkPrimary}"/>

        <Border Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="7" 
            Background="{StaticResource BackgroundSecondary}"/>

        <!-- USER ICON AND RANK-->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Viewbox>
                <Ellipse Width="80" Height="80" Margin="10">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{Binding PlayerStatistics.PlatformInfo.AvatarURL}"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Viewbox>
            <Image Source="{Binding PlayerSegment.Statistics[rankScore].Metadata.IconURL}"/>
        </StackPanel>

        <!-- USER STATS -->
        <Grid Grid.Column="1" Grid.Row="0" Margin="10,0,0,0">

            <!-- COLS -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- ROWS -->
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="0.15*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <!-- USERNAME -->
            <Viewbox Grid.Column="0" Grid.Row="0"
                     HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,10,20,0">
                <TextBlock Text="{Binding PlayerStatistics.PlatformInfo.UserName, FallbackValue=Username}"
                    Style="{StaticResource PrimaryTextStyle}" />
            </Viewbox>

            <Border Grid.Column="0" Grid.Row="1" Margin="0,0,15,0" MaxHeight="2"
                    Background="{StaticResource TextSeperator}"/>
            
            <Viewbox Grid.Column="0" Grid.Row="2" 
                     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,4">
                <TextBlock Text="Username"
                    Style="{StaticResource SecondaryTextStyle}"/>
            </Viewbox>

            <!-- LEVEL -->
            <Viewbox Grid.Column="1" Grid.Row="0"
                     HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,10,20,0" >
                <TextBlock Text="{Binding PlayerSegment.Statistics[level].DisplayValue, FallbackValue=420}"
                    Style="{StaticResource PrimaryTextStyle}"/>
            </Viewbox>

            <Border Grid.Column="1" Grid.Row="1" Margin="0,0,15,0" MaxHeight="2"
                    Background="{StaticResource TextSeperator}"/>

            <Viewbox Grid.Column="1" Grid.Row="2"
                     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,4">
                <TextBlock Text="Level"
                    Style="{StaticResource SecondaryTextStyle}"/>
            </Viewbox>

            <!-- WINS -->
            <Viewbox Grid.Column="2" Grid.Row="0"
                     HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,10,20,0" >
                <TextBlock Text="{Binding PlayerSegment.Statistics[wins].DisplayValue, FallbackValue=420}"
                    Style="{StaticResource PrimaryTextStyle}"/>
            </Viewbox>

            <Border Grid.Column="2" Grid.Row="1" Margin="0,0,15,0" MaxHeight="2"
                    Background="{StaticResource TextSeperator}"/>

            <Viewbox Grid.Column="2" Grid.Row="2"
                     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,4">
                <TextBlock Text="Wins"
                    Style="{StaticResource SecondaryTextStyle}"/>
            </Viewbox>

            <!-- KILLS -->
            <Viewbox Grid.Column="3" Grid.Row="0"
                     HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,10,20,0" >
                <TextBlock Text="{Binding PlayerSegment.Statistics[kills].DisplayValue, FallbackValue=420}"
                    Style="{StaticResource PrimaryTextStyle}"/>
            </Viewbox>

            <Border Grid.Column="3" Grid.Row="1" Margin="0,0,15,0" MaxHeight="2"
                    Background="{StaticResource TextSeperator}"/>

            <Viewbox Grid.Column="3" Grid.Row="2"
                     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,4">
                <TextBlock Text="Kills"
                    Style="{StaticResource SecondaryTextStyle}"/>
            </Viewbox>

            <!-- TOTAL DAMAGE -->
            <Viewbox Grid.Column="4" Grid.Row="0"
                     HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,10,20,0" >
                <TextBlock Text="{Binding PlayerSegment.Statistics[damage].DisplayValue, FallbackValue=420}"
                    Style="{StaticResource PrimaryTextStyle}"/>
            </Viewbox>

            <Border Grid.Column="4" Grid.Row="1" Margin="0,0,15,0" MaxHeight="2"
                    Background="{StaticResource TextSeperator}"/>

            <Viewbox Grid.Column="4" Grid.Row="2"
                     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,4">
                <TextBlock Text="Total Damage"
                    Style="{StaticResource SecondaryTextStyle}"/>
            </Viewbox>
        </Grid>
        
        <!-- SEPERATOR -->
        <Border Grid.ColumnSpan="2" Grid.Row="1" Background="#434355"/>

        <!-- FIRST LEGEND -->
        
        <!-- PORTRAIT -->
        <Border Grid.Row="2" Grid.Column="0"
                Background="{Binding LegendSegments[0].Metadata.LegendColor}"/>
        <Viewbox Grid.Column="0" Grid.Row="2" Stretch="UniformToFill">
            <Image Source="{Binding LegendSegments[0].Metadata.PortraitImageURL}"/>
        </Viewbox>
        
        <!-- STATS -->
        <Grid Grid.Column="1" Grid.Row="2" Margin="10,5,10,5">

            <!-- COLS -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- ROWS -->
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <!-- LEGEND NAME -->
            <Viewbox Grid.Column="0" Grid.Row="0"
                     HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,20,0">
                <TextBlock Text="{Binding LegendSegments[0].Metadata.Name, FallbackValue=Legend}"
                    Style="{StaticResource PrimaryTextStyle}" />
            </Viewbox>

            <!-- BR KILLS -->
            <Viewbox Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Margin="0,10,0,0">
                <StackPanel
                        Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="BR Kills"
                               Style="{StaticResource SecondaryTextStyle}" FontSize="10"/>
                    
                    <TextBlock Text="{Binding LegendSegments[0].Statistics[kills].DisplayValue}"
                               Style="{StaticResource PrimaryTextStyle}" FontSize="32"/>
                </StackPanel>
            </Viewbox>

            <!-- BR DAMAGE -->
            <Viewbox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="0,10,0,0">
                <StackPanel
                        Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="BR Damage"
                               Style="{StaticResource SecondaryTextStyle}" FontSize="10"/>

                    <TextBlock Text="{Binding LegendSegments[0].Statistics[damage].DisplayValue}"
                               Style="{StaticResource PrimaryTextStyle}" FontSize="32"/>
                </StackPanel>
            </Viewbox>

            <!-- BR WINS -->
            <Viewbox Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" Margin="0,10,0,0">
                <StackPanel
                        Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="BR Wins"
                               Style="{StaticResource SecondaryTextStyle}" FontSize="10"/>

                    <TextBlock Text="{Binding LegendSegments[0].Statistics[wins].DisplayValue}"
                               Style="{StaticResource PrimaryTextStyle}" FontSize="32"/>
                </StackPanel>
            </Viewbox>
        </Grid>

        <!-- SEPERATOR -->
        <Border Grid.ColumnSpan="2" Grid.Row="3" Background="#434355"/>
        
        <!-- SECOND LEGEND -->

        <!-- PORTRAIT -->
        <Border Grid.Row="4" Grid.Column="0"
                Background="{Binding LegendSegments[1].Metadata.LegendColor}"/>
        <Viewbox Grid.Column="0" Grid.Row="4" Stretch="UniformToFill">
            <Image Source="{Binding LegendSegments[1].Metadata.PortraitImageURL}"/>
        </Viewbox>

        <!-- STATS -->
        <Grid Grid.Column="1" Grid.Row="4" Margin="10,5,10,5">

            <!-- COLS -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- ROWS -->
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <!-- LEGEND NAME -->
            <Viewbox Grid.Column="0" Grid.Row="0"
                     HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,20,0">
                <TextBlock Text="{Binding LegendSegments[1].Metadata.Name, FallbackValue=Legend}"
                    Style="{StaticResource PrimaryTextStyle}" />
            </Viewbox>

            <!-- BR KILLS -->
            <Viewbox Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Margin="0,10,0,0">
                <StackPanel
                        Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="BR Kills"
                               Style="{StaticResource SecondaryTextStyle}" FontSize="10"/>

                    <TextBlock Text="{Binding LegendSegments[1].Statistics[kills].DisplayValue}"
                               Style="{StaticResource PrimaryTextStyle}" FontSize="32"/>
                </StackPanel>
            </Viewbox>

            <!-- BR DAMAGE -->
            <Viewbox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="0,10,0,0">
                <StackPanel
                        Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="BR Damage"
                               Style="{StaticResource SecondaryTextStyle}" FontSize="10"/>

                    <TextBlock Text="{Binding LegendSegments[1].Statistics[damage].DisplayValue}"
                               Style="{StaticResource PrimaryTextStyle}" FontSize="32"/>
                </StackPanel>
            </Viewbox>

            <!-- BR WINS -->
            <Viewbox Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" Margin="0,10,0,0">
                <StackPanel
                        Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="BR Wins"
                               Style="{StaticResource SecondaryTextStyle}" FontSize="10"/>

                    <TextBlock Text="{Binding LegendSegments[1].Statistics[wins].DisplayValue}"
                               Style="{StaticResource PrimaryTextStyle}" FontSize="32"/>
                </StackPanel>
            </Viewbox>
        </Grid>

        <!-- SEPERATOR -->
        <Border Grid.ColumnSpan="2" Grid.Row="5" Background="#434355"/>

        <!-- THIRD LEGEND -->

        <!-- PORTRAIT -->
        <Border Grid.Row="6" Grid.Column="0"
                Background="{Binding LegendSegments[2].Metadata.LegendColor}"/>
        <Viewbox Grid.Column="0" Grid.Row="6" Stretch="UniformToFill">
            <Image Source="{Binding LegendSegments[2].Metadata.PortraitImageURL}"/>
        </Viewbox>

        <!-- STATS -->
        <Grid Grid.Column="1" Grid.Row="6" Margin="10,5,10,5">

            <!-- COLS -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- ROWS -->
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <!-- LEGEND NAME -->
            <Viewbox Grid.Column="0" Grid.Row="0"
                     HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,20,0">
                <TextBlock Text="{Binding LegendSegments[2].Metadata.Name, FallbackValue=Legend}"
                    Style="{StaticResource PrimaryTextStyle}" />
            </Viewbox>

            <!-- BR KILLS -->
            <Viewbox Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Margin="0,10,0,0">
                <StackPanel
                        Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="BR Kills"
                               Style="{StaticResource SecondaryTextStyle}" FontSize="10"/>

                    <TextBlock Text="{Binding LegendSegments[2].Statistics[kills].DisplayValue}"
                               Style="{StaticResource PrimaryTextStyle}" FontSize="32"/>
                </StackPanel>
            </Viewbox>

            <!-- BR DAMAGE -->
            <Viewbox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" Margin="0,10,0,0">
                <StackPanel
                        Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="BR Damage"
                               Style="{StaticResource SecondaryTextStyle}" FontSize="10"/>

                    <TextBlock Text="{Binding LegendSegments[2].Statistics[damage].DisplayValue}"
                               Style="{StaticResource PrimaryTextStyle}" FontSize="32"/>
                </StackPanel>
            </Viewbox>

            <!-- BR WINS -->
            <Viewbox Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" Margin="0,10,0,0">
                <StackPanel
                        Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="BR Wins"
                               Style="{StaticResource SecondaryTextStyle}" FontSize="10"/>

                    <TextBlock Text="{Binding LegendSegments[2].Statistics[wins].DisplayValue}"
                               Style="{StaticResource PrimaryTextStyle}" FontSize="32"/>
                </StackPanel>
            </Viewbox>
        </Grid>

        <!-- SEPERATOR -->
        <Border Grid.ColumnSpan="2" Grid.Row="7" Background="#434355"/>
    </Grid>
</Page>
